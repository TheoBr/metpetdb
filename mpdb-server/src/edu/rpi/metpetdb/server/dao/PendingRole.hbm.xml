<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.rpi.metpetdb.client.model">
  <class name="PendingRole" table="pending_roles">
    <id name="id" column="pending_role_id" unsaved-value="0">
      <generator class="sequence">
        <param name="sequence">pending_roles_seq</param>
      </generator>
    </id>
    
    <property name="requestDate" column="request_date" />
    <many-to-one name="user" column="user_id" lazy="false" />
    <many-to-one name="sponsor" column="sponsor_id" lazy="false" />
    <many-to-one name="role" column="role_id" lazy="false" />

  </class>
  
  <query name="PendingRole.byId">
    from PendingRole pr
    where pr.id = :id
  </query>
  <query name="PendingRole.byUserId">
    from PendingRole pr
    where pr.user.id = :id
  </query>
  <query name="PendingRole.bySponsorId">
    from PendingRole pr
    where pr.sponsor.id = :id
  </query>
</hibernate-mapping>