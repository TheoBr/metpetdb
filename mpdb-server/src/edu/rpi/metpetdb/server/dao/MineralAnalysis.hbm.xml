<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.rpi.metpetdb.client.model">
  <class name="MineralAnalysis" table="mineral_analyses">
    <id name="id" column="mineral_analysis_id" unsaved-value="0">
      <generator class="sequence">
        <param name="sequence">mineral_analyses_seq</param>
      </generator>
    </id>
    
    <property name="pointX" column="point_x" />
    <property name="pointY" column="point_y" />
    <property name="spotId" column="spot_id" type="java.lang.String"/>
    <property name="analysisMethod" column="analysis_method" type="java.lang.String"/>
    <property name="location" column="where_done" type="java.lang.String"/>
    <property name="analyst" column="analyst" type="java.lang.String"/>
    <property name="analysisDate" column="analysis_date" />
    <property name="referenceId" column="reference_id" />
    <property name="description" column="description" type="java.lang.String"/>

	<many-to-one name="image" column="image_id" class="Image" lazy="false" cascade="none"/>
    <many-to-one name="subsample" column="subsample_id" class="Subsample" lazy="false" cascade="none"/>

	<property name="largeRock" column="large_rock" type="yes_no" />
	<many-to-one name="mineral" column="mineral_id" class="Mineral" lazy="false" cascade="none"/>

    <set name="elements" table="mineral_analysis_elements" cascade="save-update">
      <key column="mineral_analysis_id" />
      <composite-element class="MineralAnalysisElement">
      	<!--Composite elements CANNOT be null with a set -->
      	<property name="amount" column="amount" type="float" not-null="true"/>
      	<property name="precision" column="precision" type="float" />
      	<property name="precisionUnit" column="precision_type" />
        <many-to-one name="element" class="Element" column="element_id" lazy="false"/>
	  </composite-element>
    </set>

    <set name="oxides" table="mineral_analysis_oxides" cascade="save-update">
      <key column="mineral_analysis_id" />
      <composite-element class="MineralAnalysisOxide">
      	<!--Composite elements CANNOT be null with a set -->
      	<property name="amount" column="amount" type="float" not-null="true"/>
      	<property name="precision" column="precision" type="float" />
      	<property name="precisionUnit" column="precision_type" />
        <many-to-one name="oxide" class="Oxide" column="oxide_id" lazy="false"/>
	  </composite-element>
    </set>

  </class>

  <query name="MineralAnalysis.byId">
    from MineralAnalysis ma
    where ma.id = :id
  </query>
  <query name="MineralAnalysis.bySubsampleId">
    from MineralAnalysis ma
    where ma.subsample.id = :subsampleId
  </query>
  <query name="MineralAnalysis.bySubsampleId,size">
    select count(*) from MineralAnalysis ma
    where ma.subsample.id = :id
  </query>
  <query name="MineralAnalysis.bySubsampleId/spotId">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.spotId
  </query>
  <query name="MineralAnalysis.bySubsampleId/pointX">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.pointX
  </query>
  <query name="MineralAnalysis.bySubsampleId/pointY">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.pointY
  </query>
  <query name="MineralAnalysis.bySubsampleId/analysisMethod">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.analysisMethod
  </query>
  <query name="MineralAnalysis.bySubsampleId/location">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.location
  </query>
  <query name="MineralAnalysis.bySubsampleId/analyst">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.analyst
  </query>
  <query name="MineralAnalysis.bySubsampleId/analysisDate">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.analysisDate
  </query>
  <query name="MineralAnalysis.bySubsampleId/referenceId">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.referenceId
  </query>
  <query name="MineralAnalysis.bySubsampleId/description">
    from MineralAnalysis ma
    where ma.subsample.id = :id
    order by ma.description
  </query>
   
</hibernate-mapping>